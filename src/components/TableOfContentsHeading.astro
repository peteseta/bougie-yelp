---
interface Heading {
  depth: number;
  text: string;
  slug: string;
  subheadings: Heading[];
}

interface Props {
  heading: Heading;
}

const { heading } = Astro.props;
---

<li class="mb-1">
  <a href={'#' + heading.slug} class="text-skin-base hover:text-skin-accent">
    {heading.text}
  </a>
  {heading.subheadings.length > 0 && (
    <ul class="ml-4 pl-4 border-l border-skin-line">
      {heading.subheadings.map((subheading) => (
        <Astro.self heading={subheading} />
      ))}
    </ul>
  )}
</li>
