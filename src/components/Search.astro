---
import Card from "@components/Card.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  posts: CollectionEntry<"blog">[];
}

const { posts } = Astro.props;
---

<div id="search-container">
  <label class="relative block">
    <span class="absolute inset-y-0 left-0 flex items-center pl-2 opacity-75">
      <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"></path>
      </svg>
      <span class="sr-only">Search</span>
    </span>
    <input
      id="search-input"
      class="block w-full rounded border border-skin-fill/40 bg-skin-fill py-3 pl-10 pr-3 placeholder:italic focus:border-skin-accent focus:outline-none"
      placeholder="Search for anything..."
      type="text"
      name="search"
      autocomplete="off"
    />
  </label>

  <div id="search-results-info" class="mt-8 is-hidden"></div>

  <ul id="search-results">
    {posts.map(post => (
      <div
        class="search-item is-hidden"
        data-title={post.data.title.toLowerCase()}
        data-description={post.data.description.toLowerCase()}
        data-slug={post.id}
      >
        <Card href={`/posts/${post.id}/`} post={post} />
      </div>
    ))}
  </ul>
</div>

<script>
  import Fuse from "fuse.js";

  function initSearch() {
    const input = document.getElementById("search-input") as HTMLInputElement | null;
    const resultsInfo = document.getElementById("search-results-info") as HTMLElement | null;
    const items = document.querySelectorAll(".search-item");

    if (!input || !resultsInfo) return;
    
    const infoEl = resultsInfo;

    // Build search list from DOM
    const searchList = Array.from(items).map((item, index) => ({
      title: item.getAttribute("data-title") || "",
      description: item.getAttribute("data-description") || "",
      index,
    }));

    const fuse = new Fuse(searchList, {
      keys: ["title", "description"],
      includeMatches: true,
      minMatchCharLength: 2,
      threshold: 0.5,
    });

    // Check URL for initial query
    const searchParams = new URLSearchParams(window.location.search);
    const initialQuery = searchParams.get("q");
    if (initialQuery) {
      input.value = initialQuery;
      performSearch(initialQuery);
    }

    // Focus input
    input.focus();
    input.selectionStart = input.selectionEnd = input.value.length;

    input.addEventListener("input", (e) => {
      const query = (e.target as HTMLInputElement).value;
      performSearch(query);

      // Update URL
      if (query.length > 0) {
        const params = new URLSearchParams(window.location.search);
        params.set("q", query);
        history.replaceState(null, "", `${window.location.pathname}?${params}`);
      } else {
        history.replaceState(null, "", window.location.pathname);
      }
    });

    function performSearch(query: string) {
      // Hide all items first
      items.forEach(item => item.classList.add("is-hidden"));

      if (query.length <= 1) {
        infoEl.classList.add("is-hidden");
        return;
      }

      const results = fuse.search(query);

      // Show matching items
      results.forEach(result => {
        items[result.item.index].classList.remove("is-hidden");
      });

      // Update results info
      infoEl.classList.remove("is-hidden");
      infoEl.textContent = `Found ${results.length} ${results.length === 1 ? "result" : "results"} for '${query}'`;
    }
  }

  // Run on initial load
  initSearch();

  // Run on Astro view transitions
  document.addEventListener("astro:after-swap", initSearch);
</script>

<style>
  .search-item {
    list-style: none;
  }
  .is-hidden {
    display: none !important;
  }
</style>
