---
import { LOGO_IMAGE, SITE } from "@config";
import Hr from "./Hr.astro";
import LinkButton from "./LinkButton.astro";

export interface Props {
  activeNav?: "posts" | "archives" | "tags" | "search";
}

const { activeNav } = Astro.props;
---

<header>
  <a id="skip-to-content" href="#main-content">Skip to content</a>
  <div class="nav-container">
    <div class="top-nav-wrap">
      <a href="/" class="logo whitespace-nowrap">
        {
          LOGO_IMAGE.enable ? (
            <img
              src={`/assets/${LOGO_IMAGE.svg ? "logo.svg" : "logo.png"}`}
              alt={SITE.title}
              width={LOGO_IMAGE.width}
              height={LOGO_IMAGE.height}
            />
          ) : (
            SITE.title
          )
        }
      </a>
      <nav id="nav-menu">
        <button
          class="hamburger-menu focus-outline"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="menu-icon"
          >
            <line x1="7" y1="12" x2="21" y2="12" class="line"></line>
            <line x1="3" y1="6" x2="21" y2="6" class="line"></line>
            <line x1="12" y1="18" x2="21" y2="18" class="line"></line>
            <line x1="18" y1="6" x2="6" y2="18" class="close"></line>
            <line x1="6" y1="6" x2="18" y2="18" class="close"></line>
          </svg>
        </button>
        <ul id="menu-items" class="display-none sm:flex">
          {
            SITE.showArchives && (
              <li data-tooltip="Archives">
                <LinkButton
                  href="/archives/"
                  className={`focus-outline flex justify-center p-3 sm:p-1`}
                  ariaLabel="archives"
                  title="Archives"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class:list={[
                      "icon icon-tabler icons-tabler-outline scale-125 sm:scale-100",
                      activeNav === "archives" && "!stroke-skin-accent",
                    ]}
                  >
                    <Fragment>
                      <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                      <path d="M3 4m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v0a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z" />
                      <path d="M5 8v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-10" />
                      <path d="M10 12l4 0" />
                    </Fragment>
                  </svg>
                  <span class="sr-only">Archives</span>
                </LinkButton>
              </li>
            )
          }
          <li data-tooltip="Search">
            <LinkButton
              href="/search/"
              className={`focus-outline p-3 sm:p-1 ${
                activeNav === "search" ? "active" : ""
              } flex`}
              ariaLabel="search"
              title="Search"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="scale-125 sm:scale-100"
                ><path
                  d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
                ></path>
              </svg>
              <span class="sr-only">Search</span>
            </LinkButton>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li data-tooltip="Theme">
                <button
                  id="theme-btn"
                  class="focus-outline"
                  title="Toggle theme"
                  aria-label="auto"
                  aria-live="polite"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" id="moon-svg">
                    <path d="M20.742 13.045a8.088 8.088 0 0 1-2.077.271c-2.135 0-4.14-.83-5.646-2.336a8.025 8.025 0 0 1-2.064-7.723A1 1 0 0 0 9.73 2.034a10.014 10.014 0 0 0-4.489 2.582c-3.898 3.898-3.898 10.243 0 14.143a9.937 9.937 0 0 0 7.072 2.93 9.93 9.93 0 0 0 7.07-2.929 10.007 10.007 0 0 0 2.583-4.491 1.001 1.001 0 0 0-1.224-1.224zm-2.772 4.301a7.947 7.947 0 0 1-5.656 2.343 7.953 7.953 0 0 1-5.658-2.344c-3.118-3.119-3.118-8.195 0-11.314a7.923 7.923 0 0 1 2.06-1.483 10.027 10.027 0 0 0 2.89 7.848 9.972 9.972 0 0 0 7.848 2.891 8.036 8.036 0 0 1-1.484 2.059z" />
                  </svg>
                  <svg xmlns="http://www.w3.org/2000/svg" id="sun-svg">
                    <path d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z" />
                  </svg>
                </button>
              </li>
            )
          }
          <li data-tooltip="RSS Feed">
            <button
              id="rss-btn"
              class="focus-outline p-3 sm:p-1 flex"
              aria-label="Copy RSS feed link"
              title="RSS Feed"
              type="button"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="rss-icon scale-125 sm:scale-100">
                <path d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z" />
                <path d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z" />
                <circle cx="6" cy="18" r="2" />
              </svg>
              <span class="sr-only">Copy RSS Feed Link</span>
            </button>
          </li>
        </ul>
        <div id="nav-tooltip" class="nav-tooltip" aria-hidden="true">
          <span id="nav-tooltip-text"></span>
        </div>
      </nav>
    </div>
  </div>
  <Hr />
</header>

<style>
  #skip-to-content {
    @apply absolute -top-full left-16 z-50 bg-skin-accent px-3 py-2 text-skin-inverted transition-all focus:top-4;
  }
  .nav-container {
    @apply mx-auto flex max-w-5xl flex-col items-center justify-between sm:flex-row;
  }
  .top-nav-wrap {
    @apply relative flex w-full flex-wrap items-center justify-between p-4 sm:py-8;
  }
  .logo {
    @apply py-1 text-xl font-semibold sm:text-2xl;
  }
  .hamburger-menu {
    @apply p-2 sm:hidden;
  }
  .hamburger-menu svg {
    @apply h-6 w-6 scale-125 fill-skin-base;
  }

  nav {
    @apply flex items-center sm:ml-2 sm:flex-1 sm:flex-row sm:justify-end sm:space-x-4 sm:py-0;
  }
  nav ul {
    @apply absolute left-0 right-0 top-full flex flex-row items-center justify-end gap-2 border-b border-skin-line bg-skin-fill px-4 pb-3 shadow-sm sm:static sm:w-auto sm:gap-5 sm:border-b-0 sm:bg-transparent sm:px-0 sm:pb-0 sm:shadow-none;
  }
  nav ul li {
    @apply flex items-center justify-center;
  }
  nav ul li a {
    @apply px-2 py-2 text-center font-medium hover:text-skin-accent sm:my-0 sm:px-2 sm:py-1;
  }
  nav ul li:nth-last-child(2) a {
    @apply w-auto;
  }
  nav .active {
    @apply underline decoration-wavy decoration-2 underline-offset-4;
  }
  nav a.active svg {
    @apply fill-skin-accent;
  }

  nav button {
    @apply p-1;
  }
  nav button svg {
    @apply h-6 w-6 fill-skin-base hover:fill-skin-accent;
  }
  #theme-btn {
    @apply p-3 sm:p-1;
  }
  #theme-btn svg {
    @apply scale-125 hover:rotate-12 sm:scale-100;
  }

  .menu-icon line {
    @apply transition-opacity duration-75 ease-in-out;
  }
  .menu-icon .close {
    opacity: 0;
  }
  .menu-icon.is-active .line {
    @apply opacity-0;
  }
  .menu-icon.is-active .close {
    @apply opacity-100;
  }

  /* Sliding hover tooltip â€” desktop only */
  .nav-tooltip {
    display: none;
  }
  @media (min-width: 640px) {
    .nav-tooltip {
      display: block;
      position: absolute;
      height: 1.5rem;
      padding: 0 0.5rem;
      border-radius: 0.25rem;
      background: rgb(var(--color-accent));
      color: rgb(var(--color-fill));
      font-size: 0.65rem;
      display: flex;
      align-items: center;
      justify-content: center;
      white-space: nowrap;
      pointer-events: none;
      opacity: 0;
      transform: translateX(-50%);
      transition:
        left 0.18s ease-out,
        opacity 0.15s ease-out;
      will-change: left, opacity;
      z-index: 40;
    }
    .nav-tooltip span {
      display: block;
      text-align: center;
      transition: opacity 0.15s ease;
    }

  }
</style>

<script>
  function toggleNav() {
    // Toggle menu
    const menuBtn = document.querySelector(".hamburger-menu");
    const menuIcon = document.querySelector(".menu-icon");
    const menuItems = document.querySelector("#menu-items");

    menuBtn?.addEventListener("click", () => {
      const menuExpanded = menuBtn.getAttribute("aria-expanded") === "true";
      menuIcon?.classList.toggle("is-active");
      menuBtn.setAttribute("aria-expanded", menuExpanded ? "false" : "true");
      menuBtn.setAttribute(
        "aria-label",
        menuExpanded ? "Open Menu" : "Close Menu"
      );
      menuItems?.classList.toggle("display-none");
    });

    // Sliding hover tooltip (desktop only)
    const tooltip = document.querySelector<HTMLDivElement>("#nav-tooltip");
    const tooltipText = document.querySelector<HTMLSpanElement>("#nav-tooltip-text");
    const navItems = document.querySelectorAll<HTMLLIElement>("#menu-items li[data-tooltip]");
    let tooltipVisible = false;
    let copiedTimeout: ReturnType<typeof setTimeout> | null = null;

    function showTooltip(li: HTMLLIElement, text?: string) {
      if (!tooltip || !tooltipText) return;
      tooltipText.textContent = text || li.dataset.tooltip || "";

      const liRect = li.getBoundingClientRect();
      const parentRect = li.closest(".top-nav-wrap")!.getBoundingClientRect();
      const liCenter = liRect.left + liRect.width / 2 - parentRect.left;
      const y = liRect.bottom - parentRect.top + 4;

      tooltip.style.left = liCenter + "px";
      tooltip.style.top = y + "px";

      if (!tooltipVisible) {
        tooltip.style.transition = "opacity 0.15s ease-out";
        requestAnimationFrame(() => {
          tooltip.style.opacity = "1";
          requestAnimationFrame(() => {
            tooltip.style.transition =
              "left 0.18s ease-out, opacity 0.15s ease-out";
          });
        });
      } else {
        tooltip.style.opacity = "1";
      }
      tooltipVisible = true;
    }

    function hideTooltip() {
      if (!tooltip) return;
      tooltip.style.opacity = "0";
      tooltipVisible = false;
    }

    navItems.forEach(li => {
      li.addEventListener("mouseenter", () => {
        // Clear any pending "Copied" reset when re-entering
        if (copiedTimeout) {
          clearTimeout(copiedTimeout);
          copiedTimeout = null;
        }
        showTooltip(li);
      });
    });

    // Hide when mouse leaves the entire nav list
    document.querySelector("#menu-items")?.addEventListener("mouseleave", hideTooltip);

    window.addEventListener("resize", hideTooltip);

    // RSS copy-to-clipboard
    const rssBtn = document.querySelector<HTMLButtonElement>("#rss-btn");
    const rssLi = rssBtn?.closest<HTMLLIElement>("li[data-tooltip]");

    rssBtn?.addEventListener("click", async () => {
      const rssUrl = `${window.location.origin}/rss.xml`;
      try {
        await navigator.clipboard.writeText(rssUrl);
      } catch {
        // Fallback for older browsers
        const ta = document.createElement("textarea");
        ta.value = rssUrl;
        ta.style.position = "fixed";
        ta.style.opacity = "0";
        document.body.appendChild(ta);
        ta.select();
        document.execCommand("copy");
        document.body.removeChild(ta);
      }

      // Show "Copied!" in the unified tooltip
      if (rssLi && tooltip && tooltipText) {
        showTooltip(rssLi, "Copied!");

        // Reset after 2 seconds
        if (copiedTimeout) clearTimeout(copiedTimeout);
        copiedTimeout = setTimeout(() => {
          if (tooltipVisible && rssLi.matches(":hover")) {
            tooltipText.textContent = rssLi.dataset.tooltip || "";
          }
          copiedTimeout = null;
        }, 2000);
      }
    });
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
</script>
